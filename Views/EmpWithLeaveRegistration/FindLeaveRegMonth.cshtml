@model LedighetsPortal.Models.EmployeeLeaveViewModel
<h4>Ledighetsansökningar registrerade per månad</h4>
<div class="row">
    <div class="col-md-3">
    <form asp-controller="EmpWithLeaveRegistration" asp-action="FindLeaveRegMonth" method="get">
        <div class="form-group">
            <label>Välj månad då ansökan har registrerats</label>
            <select name="selectedMonth" class="form-control">
                <option value="1">Januari</option>
                <option value="2">Februari</option>
                <option value="3">Mars</option>
                <option value="4">April</option>
                <option value="5">Maj</option>
                <option value="6">Juni</option>
                <option value="7">Juli</option>
                <option value="8">Augusti</option>
                <option value="9">September</option>
                <option value="10">Oktober</option>
                <option value="11">November</option>
                <option value="12">December</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Filtrera</button>
    </form>
    </div>
    <div class="col-md-9">
        <table class="table">
            <thead>
                <tr>
                    <th>Förnamn</th>
                    <th>Ledighet</th>
                    <th>Registreringsdatum</th>
                    <th>Startdatum</th>
                    <th>Slutdatum</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var leave in Model.LeaveRegistrations)
                {
                    <tr>
                        <td>@leave.Employee.EmployeeFirstName</td>
                        <td>@leave.LeaveType</td>
                        <td>@leave.RegistrationDate</td>
                        <td>@leave.StartDate</td>
                        <td>@leave.EndDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>